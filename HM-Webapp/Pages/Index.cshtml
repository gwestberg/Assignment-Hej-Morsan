@page 
@model IndexModel

@{
    ViewData["Title"] = "Home";
    var person = new ClassLibHejMorsan.Person();
}
 <a href="/Index"><img alt="Hem" src="/img/morsan_small.png" width="300"></a>

<div class="container text-center">
  <!-- table headers -->
  <table class="table">
    <thead>
      <tr>
        <th display="none">Id</th>
        <th>Namn</th>
        <th>Skicka SMS</th>
        <th>Födelsedag</th>
        <th>Mors-O-Meter</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

<!-- print persons from list -->
    <tbody>
@foreach (var item in @Model.myPersons)
{
  string barColor = "bg-success";
  
  <!-- change color på progress bar -->
  int counter = Convert.ToInt32(@item.Counter);
  @if(counter < 1)
      {
        barColor = "bg-danger";
      }
  else if (counter < 3)
      {
        barColor = "bg-warning";
      }
        <tr>
        <td>@item.Name</td>
        <td><button type="button" class="btn btn-info">@item.Phone</button></td>
        <td>@item.Birthday</td>
        <td class=@barColor><h5>@item.Counter</h5></td>
        <td><a href="/EditPerson" class="btn btn-info" role="button" id="@item.Id">Ändra</a></td>
        <td><a href="/DeletePerson/?id=@item.Id" class="btn btn-danger" role="button">X</a></td>
        </tr>
}
    </tbody>
  </table>
</div>
